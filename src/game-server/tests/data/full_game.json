{
  "sequence": [
    {
      "type": "Post",
      "name": "rest",
      "endpoint": "create_game",
      "request": {
        "players": [
          "${user1}",
          "${user2}"
        ],
        "games_to_win": 2
      },
      "response_code": 201
    },
    {
      "type": "Comment",
      "text": "Users joining"
    },
    {
      "type": "SocketOpen",
      "name": "user1",
      "user_id": "${user1}"
    },
    {
      "type": "SocketSend",
      "name": "user1",
      "request": {
        "userId": "${user1}",
        "body": {
          "type": "JoinGame"
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user1",
      "response": {
        "userId": "${user1}",
        "body": {
          "type": "GameJoined"
        }
      }
    },
    {
      "type": "SocketOpen",
      "name": "user2",
      "user_id": "${user2}"
    },
    {
      "type": "SocketSend",
      "name": "user2",
      "request": {
        "userId": "${user2}",
        "body": {
          "type": "JoinGame"
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user2",
      "response": {
        "userId": "${user2}",
        "body": {
          "type": "GameJoined"
        }
      }
    },
    {
      "type": "Comment",
      "text": "Round 1"
    },
    {
      "type": "SocketReceive",
      "name": "user1",
      "response": {
        "userId": "${user1}",
        "body": {
          "type": "PendingMove"
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user2",
      "response": {
        "userId": "${user2}",
        "body": {
          "type": "PendingMove"
        }
      }
    },
    {
      "type": "SocketSend",
      "name": "user1",
      "request": {
        "userId": "${user1}",
        "body": {
          "type": "Move",
          "value": "Rock"
        }
      }
    },
    {
      "type": "SocketSend",
      "name": "user2",
      "request": {
        "userId": "${user2}",
        "body": {
          "type": "Move",
          "value": "Paper"
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user1",
      "response": {
        "userId": "${user1}",
        "body": {
          "type": "RoundResult",
          "result": "Loss",
          "other_move": "Paper"
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user2",
      "response": {
        "userId": "${user2}",
        "body": {
          "type": "RoundResult",
          "result": "Win",
          "other_move": "Rock"
        }
      }
    },
    {
      "type": "Comment",
      "text": "Round 2"
    },
    {
      "type": "SocketSend",
      "name": "user1",
      "request": {
        "userId": "${user1}",
        "body": {
          "type": "Move",
          "value": "Rock"
        }
      }
    },
    {
      "type": "SocketSend",
      "name": "user2",
      "request": {
        "userId": "${user2}",
        "body": {
          "type": "Move",
          "value": "Paper"
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user1",
      "response": {
        "userId": "${user1}",
        "body": {
          "type": "RoundResult",
          "result": "Loss",
          "other_move": "Paper"
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user2",
      "response": {
        "userId": "${user2}",
        "body": {
          "type": "RoundResult",
          "result": "Win",
          "other_move": "Rock"
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user1",
      "response": {
        "userId": "${user1}",
        "body": {
          "type": "MatchResult",
          "result": "Loss",
          "wins": 0,
          "total": 2
        }
      }
    },
    {
      "type": "SocketReceive",
      "name": "user2",
      "response": {
        "userId": "${user2}",
        "body": {
          "type": "MatchResult",
          "result": "Win",
          "wins": 2,
          "total": 2
        }
      }
    }
  ]
}
